<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <title>Listar Facturas</title>
        <link rel="stylesheet" href="/stylesheets/indexlistar.css"/>
    </head>
    <body>

        <div>
          <table class="table table-bordered table-striped" id="TablaListar">
            <caption style="font-size: 50px;"><b>Lista de Facturas</b></caption>
              <thead>
                <tr>
                  <th>ID</th>
                  <th>ProdCompr</th>
                  <th>PrecioTotal</th>
                  <th>FechaC</th>
                  <th>HoraC</th>
                  <th>DomicilioF</th>
                  <th>Proveedor</th>
                  <th>CIF_P</th>
                  <th>SerialPr</th>
                  <th>CI_Admin</th>
                </tr>
              </thead>
              <tbody id="Datostabla">
              </tbody>
          </table>
        </div>
        <p id="Datos" class="invisible"> <%= JSON %> </p>

        <script>

          let res = document.getElementById("Datostabla")
          let Datosjson = JSON.parse(document.getElementById("Datos").innerText)

          res.innerHTML = ""
          for(let item of Datosjson){

            res.innerHTML += `
        
              <tr>
                <td> ${item.ID} </td>
                <td> ${item.ProdCompr} </td>
                <td> ${item.PrecioTotal} </td>
                <td> ${item.FechaC} </td>
                <td> ${item.HoraC} </td>
                <td> ${item.DomicilioF} </td>
                <td> ${item.Proveedor} </td>
                <td> ${item.CIF_P} </td>
                <td> ${item.SerialPr} </td>
                <td> ${item.CI_Admin} </td>
              </tr>
            `
          }
        </script>
        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    </body>
</html>